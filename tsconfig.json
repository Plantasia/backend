{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["./src/entities/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@auth/*": ["./src/auth/*"]
    }
  }
}
